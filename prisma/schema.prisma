

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("MAIN_DATABASE_URL")
}

model User {
  id       Int @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
  profile  Profile?
  history  VolunteerHistory?
}

model Profile {
  id        Int @id @default(autoincrement())
  userId    Int @unique
  user      User @relation(fields: [userId], references: [id])
  bio       String?
  skills    String[]
  causes    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VolunteerHistory {
  id                Int @id @default(autoincrement())
  userId           Int @unique
  user             User @relation(fields: [userId], references: [id])
  eventsParticipated EventParticipation[]
  totalHours       Int
  feedback         String?
  certificates     String[] // List of certificate URLs
}

model EventParticipation {
  id          Int @id @default(autoincrement())
  historyId   Int
  eventId     String
  date        DateTime
  hoursSpent  Int
  history     VolunteerHistory @relation(fields: [historyId], references: [id])
}